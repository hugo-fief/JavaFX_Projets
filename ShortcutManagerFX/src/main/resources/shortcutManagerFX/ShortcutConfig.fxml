<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="shortcutManagerFX.controller.ShortcutConfigController"
            stylesheets="@styles.css">

    <!-- Label et champ pour le raccourci Save -->
    <Label text="Save Shortcut:" layoutX="20.0" layoutY="30.0"/>
    <TextField fx:id="saveField" layoutX="150.0" layoutY="30.0" prefWidth="300.0"/>
    <Button text="✕" layoutX="460.0" layoutY="30.0" onAction="#clearSaveField" prefWidth="30.0"/>

    <!-- Label et champ pour le raccourci Open -->
    <Label text="Open Shortcut:" layoutX="20.0" layoutY="80.0"/>
    <TextField fx:id="openField" layoutX="150.0" layoutY="80.0" prefWidth="300.0"/>
    <Button text="✕" layoutX="460.0" layoutY="80.0" onAction="#clearOpenField" prefWidth="30.0"/>

    <!-- Bouton pour sauvegarder les modifications -->
    <Button text="Save Changes" layoutX="320.0" layoutY="130.0" prefWidth="150.0" onAction="#saveChanges"/>
</AnchorPane>
