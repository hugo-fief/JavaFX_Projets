<?xml version="1.0" encoding="UTF-8"?>

<!-- 
    Fichier FXML pour l'interface de configuration des raccourcis.
    Cette interface permet à l'utilisateur de modifier les raccourcis associés aux actions
    et de sauvegarder les modifications.
-->

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="shortcutManagerFX.controller.ShortcutConfigController"
            stylesheets="@styles.css">

    <!-- 
        Section pour configurer le raccourci "Save":
        - Label indiquant l'action "Save".
        - Champ de texte (TextField) pour saisir/modifier le raccourci.
        - Bouton pour effacer le contenu du champ.
    -->
    <Label text="Save Shortcut:" layoutX="20.0" layoutY="30.0"/>
    <TextField fx:id="saveField" layoutX="150.0" layoutY="30.0" prefWidth="300.0"/>
    <Button text="X" layoutX="460.0" layoutY="30.0" onAction="#clearSaveField" prefWidth="30.0"/>

    <!-- 
        Section pour configurer le raccourci "Open":
        - Label indiquant l'action "Open".
        - Champ de texte (TextField) pour saisir/modifier le raccourci.
        - Bouton pour effacer le contenu du champ.
    -->
    <Label text="Open Shortcut:" layoutX="20.0" layoutY="80.0"/>
    <TextField fx:id="openField" layoutX="150.0" layoutY="80.0" prefWidth="300.0"/>
    <Button text="X" layoutX="460.0" layoutY="80.0" onAction="#clearOpenField" prefWidth="30.0"/>

    <!-- 
        Bouton pour sauvegarder les modifications.
        Appelle la méthode associée dans le contrôleur pour valider et sauvegarder les changements.
    -->
    <Button text="Save Changes" layoutX="320.0" layoutY="130.0" prefWidth="150.0" onAction="#saveChanges"/>
</AnchorPane>
